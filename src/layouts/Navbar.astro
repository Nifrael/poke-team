    <div>
      <Image
        src={Menu}
        id="hamburger-button"
        alt="Menu"
        class="cursor-pointer md:hidden"
      />
      <nav class="hidden md:block space-x-8 text-xl" aria-label="main">
        <a href="#" class="hover:opacity-90">Team</a>
