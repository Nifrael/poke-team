---
import { Image } from "astro:assets";
import Menu from "../assets/menu.svg";
---

<header class="bg-teal-50">
  <section
    class="max-w-[90dvw] mx-auto px-8 py-4 flex justify-between items-center"
  >
    <h2>
      <a href="/">🐦‍🔥 PokeTeam</a>
    </h2>
    <div>
      <button id="hamburger-button" class="text-3xl md:hidden cursor-pointer">
        &#9776;
      </button>
      <nav class="hidden md:block space-x-8 text-xl" aria-label="main">
        <a href="#" class="hover:opacity-90">Team</a>
        <a href="/combat" class="hover:opacity-90">Combats</a>
        <a href="#" class="hover:opacity-90">Statistiques</a>
      </nav>
    </div>
    <!-- <ul>
      <li><h4><a href="#">Team</a></h4></li>
      <li><h4><a href="/combat">Combats</a></h4></li>
      <li><h4><a href="#">Statistiques</a></h4></li>
      <div class="menu-titles">
        <li><a href="">Team</a></li>
        <li><a href="">Combats</a></li>
        <li><a href="">Statistiques</a></li>
      </div>
    </ul> -->
  </section>
  <section
    id="mobile-menu"
    class="absolute top-0 z-10 bg-teal-50 w-full text-5xl flex-col justify-content-center origin-top hidden"
  >
    <button class="text-8xl self-end px-6"> &times; </button>
    <nav
      class="flex flex-col min-h-screen items-center py-8"
      arial-label="mobile"
    >
      <a href="#" class="w-full text-center py-6 hover:opacity-90"> Team </a>
      <a href="/combat" class="w-full text-center py-6 hover:opacity-90">
        Combat
      </a>
      <a href="#" class="w-full text-center py-6 hover:opacity-90">
        Statistiques
      </a>
    </nav>
  </section>
</header>

<script>
  const hamburgerBtn = document.getElementById("hamburger-button");
  const mobileMenu = document.getElementById("mobile-menu");

  const toggleMenu = () => {
    mobileMenu?.classList.toggle("hidden");
    mobileMenu?.classList.toggle("flex");
  };

  hamburgerBtn?.addEventListener("click", toggleMenu);
  mobileMenu?.addEventListener("click", toggleMenu);
</script>

